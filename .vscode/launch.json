{
   "version": "0.2.0",
   "configurations": [
      {
         "type": "node",
         "request": "launch",
         "name": "excel-med debug app",
         "runtimeExecutable": "npm",
         "runtimeArgs": ["run", "dev"],
         "port": 3000,
         "console": "integratedTerminal"
      },
      {
         "type": "node",
         "request": "launch",
         "name": "Jest: debug tests",
         "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
         "args": ["--runInBand"],
         "console": "integratedTerminal",
         "internalConsoleOptions": "neverOpen",
         "env": {
            "NODE_ENV": "test"
         }
      }
   ]
}
